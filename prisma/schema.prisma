generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = "postgres://postgres:postgres@localhost:5432/casestudy" // env("DATABASE_URL") fails to load, will hard code for the sake of time
}

model Patient {
  id    Int     @id @default(autoincrement())
  createdAt DateTime @default(now())
  clientId String @unique
  birthdate DateTime
  gender Int
  ethnicity Int
  test_results TestResult[]
}

model TestResult {
  id    Int     @id @default(autoincrement())
  createdAt DateTime @default(now())
  patient Patient @relation(fields: [patientId], references: [clientId])
  date_testing DateTime
  patientId String
  creatine Float
  creatine_unit String
  chloride Float
  chloride_unit String
  fasting_glucose Float
  fasting_glucose_unit String
  potassium Float
  potassium_unit String
  sodium Float
  sodium_unit String
  total_calcium Float
  total_calcium_unit String
  total_protein Float
  total_protein_unit String
}